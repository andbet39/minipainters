<p id="notice"><%= notice %></p>

<h1>Miniatures</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @miniatures.each do |miniature| %>
      <tr>
        <td><%= miniature.title %></td>
        <td><%= miniature.description %></td>
        <td><%= miniature.user %></td>
        <td><%= link_to 'Show', miniature %></td>
        <td><%= link_to 'Edit', edit_miniature_path(miniature) %></td>
        <td><%= link_to 'Destroy', miniature, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Miniature', new_miniature_path %>
